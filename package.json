{
  "name": "hardware-setup-visualizer",
  "version": "1.0.0",
  "description": "Desktop application for visualizing hardware test setups",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run copy:renderer",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy:renderer": "node -e \"const fs=require('fs'),path=require('path'); fs.mkdirSync('dist/renderer',{recursive:true}); fs.copyFileSync('src/renderer/index.html','dist/renderer/index.html'); fs.copyFileSync('src/renderer/styles.css','dist/renderer/styles.css'); try{fs.cpSync('src/renderer/assets','dist/renderer/assets',{recursive:true})}catch(e){}\"",
    "build:watch": "concurrently \"tsc --watch\" \"tsc -p tsconfig.renderer.json --watch\"",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "test": "jest",
    "test:e2e": "playwright test",
    "package": "electron-builder",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "electron",
    "hardware",
    "visualization",
    "test-setup"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.37.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.qa.hardware-setup-visualizer",
    "productName": "Hardware Setup Visualizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/icon.icns"
    }
  }
}

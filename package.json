{
  "name": "hardware-setup-visualizer",
  "version": "1.0.0",
  "description": "Desktop application for visualizing hardware test setups",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "test": "jest",
    "test:e2e": "playwright test",
    "package": "electron-builder",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["electron", "hardware", "visualization", "test-setup"],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "playwright": "^1.37.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.qa.hardware-setup-visualizer",
    "productName": "Hardware Setup Visualizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/icon.icns"
    }
  }
}